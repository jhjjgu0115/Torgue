			<AccuracyLong>0.20</AccuracyLong>
			<RangedWeapon_Cooldown>0.5</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Plasteel>30</Plasteel>
			<ComponentIndustrial>4</ComponentIndustrial>
		</costList>
