		<label>Torgue Revolver</label>
		<description>"Vision" the basic pistol of Hyperion.Hold gently in your hands and shoot.</description>
		<graphicData>
			<texPath>Things/Weapon/Torgue_HG</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Autopistol</soundInteract>
		<recipeMaker>
			<researchPrerequisite>BoomBullet</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<weaponTags>
			<li>SpacerGun</li>
			<li>Torgue</li>
		</weaponTags>
		<statBases>
			<WorkToMake>5000</WorkToMake>
			<Mass>1.2</Mass>
			<AccuracyTouch>0.80</AccuracyTouch>
			<AccuracyShort>0.40</AccuracyShort>
